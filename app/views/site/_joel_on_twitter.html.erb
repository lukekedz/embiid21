<ul>
<% @joel_tweets.each do |tweet| %>
  <li>
    <%= tweet.created_at.to_s[0..15] %>
        <%= auto_link('@' + tweet.user.screen_name.to_s, target: '_blank' ).html_safe %>
      </span>
    says:
  </li>
  <li><%= auto_link(Obscenity.sanitize(tweet.full_text.to_s.dup), target: '_blank').html_safe %></li>
  <li class="joel-tweets" style="display: none;"><%= tweet.id %></li>
  <br/>
<% end %>
</ul>