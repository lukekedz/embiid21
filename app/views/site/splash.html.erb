<% @stats.each do |game| %>
  <% if game.id == @stats[-1].id %>
    <div class="row center-align" id="game-<%= game.id %>">
      <%= render 'game_stats', game: game %>
    </div>
  <% else %>
    <div class="row center-align" style="display: none;" id="game-<%= game.id %>">
      <%= render 'game_stats', game: game %>
    </div>
  <% end %>
<% end %>

