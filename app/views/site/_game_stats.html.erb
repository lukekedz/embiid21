<div class="col l5 stats">
  <div class="row"></div>

  <div class="row">
    <div class="col l4">
      <strong><%= game.opp.last(3) %></strong>
      <br/>
      <%= Date.parse(game.game_date).strftime('%^b') %> 
      <%= Date.parse(game.game_date).strftime('%-d') %>
    </div>
    <div class="col l4">
      <%= game.pts %>
      <br/>
      POINTS
    </div>
    <div class="col l4">
      <%= game.min %>
      <br/>
      MINUTES
    </div>
  </div>

  <div class="row">
    <div class="col l4">
      <%= game.fg_prct %>
      <br/>
      FIELD GOAL %
    </div>
    <div class="col l4">
      <%= game.ft_prct %>
      <br/>
      FREE THROW %
    </div>
    <div class="col l4">
      <%= game.three_prct %>
      <br/>
      THREE POINT %
    </div>
  </div>

  <div class="row">

    <div class="col l4">
      <div class="row">
        <div class="col l6">
          REB
          <br/>
          <%= game.reb %>
        </div>
        <div class="col l6">
          AST
          <br/>
          <%= game.ast %>
        </div>
      </div>

      <div class="row">
        <div class="col l6">
          BLK
          <br/>
          <%= game.blk %>
        </div>
        <div class="col l6">
          STL
          <br/>
          <%= game.stl %>
        </div>
      </div>
    </div>

    <div class="col l8">
      <div class="row">
        <div class="video-container responsive-video" width="480" height="300">
          <iframe src="https://giphy.com/embed/<%= game.player_giphy_id %>" frameBorder="0" allowfullscreen></iframe>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="col l7 stats">
  <div class="row">
    <div class="video-container responsive-video highlight-video">
      <object>
        <param name="movie" value="http://www.youtube.com/v/<%= game.video_id %>"></param>
        <embed src="http://www.youtube.com/v/<%= game.video_id %>" type="application/x-shockwave-flash"></embed>
      </object>
    </div>
  </div>
</div>
